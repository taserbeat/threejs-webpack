{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    "types": [
      "node"
    ],
    "lib": [
      "ES2019",
      "DOM"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src/**/*",
  ]
}
